<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    tools:context="com.codepath.apps.mysimpletweets.Profile">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#fff"
        android:id="@+id/rUserHeader"
        tools:context="com.codepath.apps.mysimpletweets.Profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp">
        <ImageView

            android:id="@+id/profileImageBack"
            android:background="#52acf1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#336666"
            android:id="@+id/ivProfileImage"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/tvFollowing"
            android:layout_alignStart="@+id/tvFollowing"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Julio jean fils"
            android:textStyle="bold"
            android:textColor="#333"
            android:id="@+id/tvName"
            android:layout_alignBottom="@+id/profileImageBack"
            android:layout_alignLeft="@+id/screenName"
            android:layout_alignStart="@+id/screenName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvTageline"
            android:text="Your Tageline"
            android:textColor="#000"
            android:layout_below="@+id/ivProfileImage"
            android:layout_alignLeft="@+id/ivProfileImage"
            android:layout_alignStart="@+id/ivProfileImage"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="33 ABONNEMENTS"
            android:id="@+id/tvFollowers"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_alignBottom="@+id/tvFollowing"
            android:layout_toRightOf="@+id/tvName"
            android:layout_toEndOf="@+id/tvName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="33 ABONNES"
            android:textStyle="bold"
            android:textColor="#333"
            android:id="@+id/tvFollowing"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="\@Julio jean fils"
            android:id="@+id/screenName"
            android:textColor="#333"
            android:shadowColor="#443f3f"
            android:layout_below="@+id/profileImageBack"
            android:layout_toRightOf="@+id/ivProfileImage"
            android:layout_toEndOf="@+id/ivProfileImage" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        tools:context="com.codepath.apps.mysimpletweets.Profile"
        android:id="@+id/flContainer"
        android:layout_below="@+id/rUserHeader">
    </RelativeLayout>
</RelativeLayout>
